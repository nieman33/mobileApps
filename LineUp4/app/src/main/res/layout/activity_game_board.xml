<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_game_board_linear_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <TextView
            android:id="@+id/player1_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/player1_name"/>

        <TextView
            android:id="@+id/player2_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/player1_name_text_view"
            android:text="@string/player2_name"/>

    </RelativeLayout>

    <!--<View
        android:id="@+id/game_board_view"
        android:layout_width="fill_parent"
        android:layout_height="252dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp" />-->

</LinearLayout>